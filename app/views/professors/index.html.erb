				<div class ="center col s12 l3">
				<%= image_tag(prof.avatar.url(:medium), :class => "foto circle responsive-img") %>
				</div>
				<div class="col s12 l9">
					<br>
					<strong class="nome">Nome:</strong>
					<%= prof.name %><br>
					<strong class="nome">Cargo:</strong>
					<%= prof.role %><br>
					<strong class="nome">√Årea:</strong>
					<%= prof.area %><br>
					<%= link_to "Mais Info", prof, method: :get %>
