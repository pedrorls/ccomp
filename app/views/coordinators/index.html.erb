<h5 class="title center-align">Coordenação</h5>
<div class="row">
	<div class="container">
		<% @professors.each do |prof| %>
			<% if prof.coordinator == true %>
				<div class ="card row"><br>
					<div class ="col s3 responsive-img hide-on-med-and-down">
					<%= image_tag(prof.avatar.url(:medium), :class => "foto") %>
					</div>
						<div class="divider"></div>
						<div class=" info row">
							<strong class="nome">Nome:</strong>
							<%= prof.name %><br>
							<strong class="nome">Email:</strong>
							<%= prof.email %><br>
							<strong class="nome">Telefone:</strong>
							<%= prof.telephone %><br>
							<strong class="nome">Sala:</strong>
							<%= prof.room %><br>
							<div class="divider"></div>
						</div>
				</div>
			<%end%>
		<%end%>
	</div>
</div>
